<% content_for :partCss do %>
    <%= stylesheet_link_tag 'css/wn.css', media: 'all'%>
<% end %>
<% content_for :partJs do %>
<% end %>


  <!-- top tiles -->
  <div class="row">
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
      <div class="wn-title green">选课控制</div>
    </div>
  </div>
  <!-- /top tiles -->

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2 class="wryh">课程列表</h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>

        <div class="x_content">

		  <%= link_to "开放所有", openall_courses_path(), class: 'btn btn-xs btn-success' %>
		  <%= link_to "关闭所有", closeall_courses_path(), class: 'btn btn-xs btn-danger' %>
          <div class="table-responsive">
            <table class="table table-striped jambo_table bulk_action sortable">
              <thead>
              <tr class="headings">
				<th class="column-title">课程编号 </th>
                <th class="column-title">课程名称 </th>
                <th class="column-title">课时/学分</th>
                <th class="column-title">考试方式</th>
                <th class="column-title">主讲教师</th>
                <th class="column-title">状态</th>
                <th class="column-title" style="text-align: center;" >操作</th>
              </tr>
              </thead>

              <tbody>

              	<% @course.each do |course| %>
              		<tr class="even pointer">
              			<td class=" "><%= course.course_code %></td>
	                    <td class=" "><%= course.name %></td>
	                    <td class=" "><%= course.credit %></td>
	                    <td class=" "><%= course.exam_type %></td> 	  
	                    <td class=" "><%= course.teacher.name %></td>
	                    <% if course.open %>                   
	                    	<td class=" ">已开放选课</td>
	                    	<td class=" "><%= link_to "关闭", closeselect_course_path(course), class: 'btn btn-xs btn-danger' %></td>
	                    <% else %>
	                    	<td class=" ">未开放选课</td>
	                    	<td class=" "><%= link_to "开放", openselect_course_path(course), class: 'btn btn-xs btn-success' %></td>
	                    <% end %>
	                </tr>
              	<% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>

