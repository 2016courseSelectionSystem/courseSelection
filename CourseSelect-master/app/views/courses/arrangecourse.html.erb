<% content_for :partCss do %>
    <%= stylesheet_link_tag 'css/wn.css', media: 'all'%>
<% end %>
<% content_for :partJs do %>
<% end %>


  <!-- top tiles -->
  <div class="row">
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
      <div class="wn-title green">排课</div>
    </div>
  </div>
  <!-- /top tiles -->

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2 class="wryh">空教室列表</h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>

        <div class="x_content">


          <div class="table-responsive">
            <table class="table table-striped jambo_table bulk_action sortable">
              <thead>
              <tr class="headings">
				<th class="column-title">校区 </th>
                <th class="column-title">教室 </th> 
                <th class="column-title">教室容量 </th>
                <th class="column-title">星期 </th>
                <th class="column-title">节次</th>
				<th class="column-title">操作</th>
              </tr>
              </thead>

              <tbody>

              	<% @arranges_array.each do |arranges| %>
              		<% arr = arranges[0] %>
              		<tr class="even pointer">
              			<td class=" "><%= arr.classroom.campus %></td>
	                    <td class=" "><%= (arr.classroom.building + arr.classroom.name) %></td>
	                    <td class=" "><%= arr.classroom.volume %></td>
	                    <td class=" "><%= arr.classtime.weekday %></td> 
	                    
	                    <td class=" ">
	                    	<% id_array = Array.new %>
	                    	<% arranges.each do|arrange| %>
	                    		<%=arrange.classtime.phase%>
	                    		<% id_array.push(arrange.id) %>
	                    	<% end %>节
	                    </td>
	                    <td class=" "><%= link_to "选择", arrangeconfirm_course_url(@course,arrange_ids:id_array), class: 'btn btn-xs btn-success' %><td>                   
	                </tr>
              	<% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>

