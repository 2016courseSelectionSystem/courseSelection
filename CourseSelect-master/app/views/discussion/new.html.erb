<% content_for :partCss do %>
    <%= stylesheet_link_tag 'css/wn.css', media: 'all'%>
<% end %>
<% content_for :partJs do %>
    <%= javascript_include_tag 'js/editor' %>
<% end %>

<div class="right_col">
  <!-- top title -->
  <div class="row">
    <div class="col-md2 col-sm-4 col-xs-6 tile_stats_count">
      <div class="wn-title green">创建新讨论</div>
    </div>
  </div>

  <% if @discussion.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @discussion.errors.full_messages.each do |msg| %>
              <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= msg %>
              </div>
          <% end %>
        </ul>
      </div>
  <% end %>

  <div class="row">
    <div class="col-md-12 col-lg-10 col-lg-offset-1">
      <div class="x_panel">

        <div class="x_title">
          <h2>新讨论</h2>
          <div class="clearfix"></div>
        </div>

        <div class="x_content">
          <%= form_for @discussion, url: course_discussion_index_path(course_id: @course), method: :post, html: {class: 'form-horizontal', role: 'form'} do |f| %>

              <div class="form-group">
                <%= f.label "标题", class: 'col-sm-2 col-md-1 control-label' %>
                <div class="col-sm-9">
                  <%= f.text_field :title, class: 'form-control col-sm-8 col-md-5', placeholder: "标题内容" %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label "内容", class: 'col-sm-2 col-md-1 control-label' %>
                <div class="col-sm-9">
                  <%= f.text_area :content, class: 'form-control' %>
                </div>
              </div>

              <%= f.submit '提交', class: "btn btn-success btn-block" %>
              <%= link_to '取消', course_discussion_index_path(@course), :class => "btn btn-default btn-block" %>

          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>


