<%= form_for @classroom, url: {action: "create"} ,html: {class: 'form-horizontal', role: 'form'} do |f| %>
    <%= render 'shared/error_messages', :object => @classroom %>

    <div class="form-group">
      <%= f.label "教室名称", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :name, class: 'form-control', placeholder: "输入课程名" %>
        </div>
      </div>
    </div>


    <div class="form-group">
      <%= f.label "校区", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.select :campus, %w(西区 东区), {}, {class: 'form-control', placeholder: '选择校区'} %>
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label "教学楼", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.select :building, %w(教一 学院一 学院二), {}, {class: 'form-control', placeholder: '选择教学楼'} %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "可容纳人数", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :volume, class: 'form-control', placeholder: "输入教室可容纳人数" %>
        </div>
      </div>
    </div>

    <%= f.submit '提交', class: "btn btn-success btn-block" %>
    <%= link_to '取消', classroom_index_path, :class => "btn btn-default btn-block" %>

<% end %>
